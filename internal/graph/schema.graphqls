scalar Time

type Post{

    id: ID:
    title: String!
    content: String!
    commentsEnabled: Boolean!
    createdAt: Time! 

}

type Comment{
    id: ID!
    postID: ID!
    parentID: ID
    content: String!
    createdAt: Time!

}

type Query{
    posts: [Post!]!
    post(id: ID!): Post
    comments(postID: ID!, limit: Int, offset: Int!): [Comment!]!

}

type Mutation {
    
}